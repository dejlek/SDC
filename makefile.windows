include makefile.common

DFLAGS = -version=SDCCOMPILER -w -debug -g -unittest -Iimport -Isrc $(FLAGS)
SOURCE = \
	src/sdc/ast/*.d \
	src/sdc/parser/*.d \
	src/sdc/gen/*.d \
	src/sdc/java/*.d

OBJ = bin\sdc.obj
LIB = bin\sdc.lib
EXE = bin\sdc.exe

LIBLLVM = $(LLVMDIR)\llvm-2.9.lib

all: $(EXE)

$(LIB): $(SOURCE)
	@mkdir -p bin
	$(DMD) -lib $(DFLAGS) "-of$@" $(SOURCE)

$(EXE): $(LIB)
	$(DMD) $(DFLAGS) -of"$@" "$(LIB)" "$(LIBLLVM)" src/sdc/*.d

clean:
	rm $(EXE) $(OBJ) $(LIB)
